@prefix rdf: <http://www.w3.org/1999/02/22-rdf-syntax-ns#> .
@prefix rdfs: <http://www.w3.org/2000/01/rdf-schema#> .
@prefix skos: <http://www.w3.org/2004/02/skos/core#> .
@prefix dct: <http://purl.org/dc/terms/> .
@prefix xsd: <http://www.w3.org/2001/XMLSchema#> .
@prefix sp: <http://example.org/smartphone#> .
@prefix spv: <http://example.org/smartphone/vocab/> .

# region CONCEPT SCHEME
spv:SmartphoneVocabulary a skos:ConceptScheme ;
    skos:prefLabel "Smartphone Recommendation Vocabulary"@en ;
    dct:description "SKOS vocabulary for smartphone features, use cases, and price segments"@en ;
    skos:hasTopConcept spv:UseCase, spv:PriceSegment .
# endregion

# region USE CASES
spv:UseCase a skos:Concept ;
    skos:prefLabel "Use Case"@en ;
    skos:topConceptOf spv:SmartphoneVocabulary ;
    skos:definition "User intent or primary usage scenario"@en .

# Photography
spv:Photography a skos:Concept ;
    skos:prefLabel "Photography"@en ;
    skos:altLabel "Camera"@en, "Photo"@en ;
    skos:broader spv:UseCase ;
    skos:inScheme spv:SmartphoneVocabulary ;
    skos:definition "Taking photos and videos with good quality camera"@en ;
    skos:scopeNote "Requires main camera >= 50MP and AMOLED/OLED display"@en .

# Gaming
spv:Gaming a skos:Concept ;
    skos:prefLabel "Gaming"@en ;
    skos:altLabel "Mobile Gaming"@en, "Gamer"@en ;
    skos:broader spv:UseCase ;
    skos:related spv:Flagship ;
    skos:inScheme spv:SmartphoneVocabulary ;
    skos:definition "Playing mobile games"@en ;
    skos:scopeNote "Requires refresh rate >= 90Hz and battery >= 4000mAh"@en .

# Vlogging
spv:Vlogging a skos:Concept ;
    skos:prefLabel "Vlogging"@en ;
    skos:altLabel "Content Creator"@en, "Selfie"@en, "Video Blogger"@en ;
    skos:broader spv:UseCase ;
    skos:related spv:ProPhotography ;
    skos:inScheme spv:SmartphoneVocabulary ;
    skos:definition "Video blogging and selfie-focused content creation"@en ;
    skos:scopeNote "Requires selfie camera >= 48MP"@en .

# Business
spv:Business a skos:Concept ;
    skos:prefLabel "Business"@en ;
    skos:altLabel "Work Phone"@en, "Professional"@en ;
    skos:broader spv:UseCase ;
    skos:related spv:MidRange ;
    skos:inScheme spv:SmartphoneVocabulary ;
    skos:definition "Work and productivity phone"@en ;
    skos:scopeNote "Requires battery >= 5000mAh and camera >= 48MP for document scanning"@en .

# Everyday Use
spv:EverydayUse a skos:Concept ;
    skos:prefLabel "Everyday Use"@en ;
    skos:altLabel "Daily Driver"@en, "Basic Use"@en ;
    skos:broader spv:UseCase ;
    skos:related spv:Budget ;
    skos:inScheme spv:SmartphoneVocabulary ;
    skos:definition "General daily usage"@en ;
    skos:scopeNote "Requires recent release (>= 2024), battery >= 3500mAh, camera >= 12MP"@en .

# Minimalist phone
spv:Minimalist a skos:Concept ;
    skos:prefLabel "Minimalist"@en ;
    skos:altLabel "Simple Phone"@en, "Basic Phone"@en ;
    skos:broader spv:UseCase ;
    skos:related spv:AfterMarket ;
    skos:inScheme spv:SmartphoneVocabulary ;
    skos:definition "Simple phones without modern connectivity features"@en ;
    skos:scopeNote "No NFC, no 5G support"@en .

# endregion

# region PRICE SEGMENTS
spv:PriceSegment a skos:Concept ;
    skos:prefLabel "Price Segment"@en ;
    skos:topConceptOf spv:SmartphoneVocabulary ;
    skos:definition "Market segment based on price range"@en .

spv:Flagship a skos:Concept ;
    skos:prefLabel "Flagship"@en ;
    skos:altLabel "Premium"@en, "High-End"@en ;
    skos:broader spv:PriceSegment ;
    skos:related spv:ProGaming, spv:ProPhotography ;
    skos:inScheme spv:SmartphoneVocabulary ;
    skos:definition "Premium segment with top-tier specifications"@en ;
    skos:scopeNote "Price > 900 EUR"@en .

spv:MidRange a skos:Concept ;
    skos:prefLabel "Mid-Range"@en ;
    skos:altLabel "Mid-Tier"@en ;
    skos:broader spv:PriceSegment ;
    skos:related spv:Business ;
    skos:inScheme spv:SmartphoneVocabulary ;
    skos:definition "Middle segment with balanced price-performance"@en ;
    skos:scopeNote "Price between 400-900 EUR"@en .

spv:Budget a skos:Concept ;
    skos:prefLabel "Budget"@en ;
    skos:altLabel "Entry-Level"@en, "Affordable"@en ;
    skos:broader spv:PriceSegment ;
    skos:related spv:EverydayUse ;
    skos:inScheme spv:SmartphoneVocabulary ;
    skos:definition "Entry-level segment with lower prices"@en ;
    skos:scopeNote "Price < 400 EUR"@en .

spv:AfterMarket a skos:Concept ;
    skos:prefLabel "After Market"@en ;
    skos:altLabel "Discontinued"@en, "Legacy"@en, "No Price"@en ;
    skos:broader spv:PriceSegment ;
    skos:inScheme spv:SmartphoneVocabulary ;
    skos:definition "Phones no longer sold at retail, available only on secondary market"@en ;
    skos:scopeNote "No current retail price available"@en .
# endregion
