@prefix rdf: <http://www.w3.org/1999/02/22-rdf-syntax-ns#> .
@prefix rdfs: <http://www.w3.org/2000/01/rdf-schema#> .
@prefix skos: <http://www.w3.org/2004/02/skos/core#> .
@prefix dct: <http://purl.org/dc/terms/> .
@prefix xsd: <http://www.w3.org/2001/XMLSchema#> .
@prefix sp: <http://example.org/smartphone#> .
@prefix spv: <http://example.org/smartphone/vocab/> .

# region CONCEPT SCHEME
spv:SmartphoneVocabulary a skos:ConceptScheme ;
    skos:prefLabel "Smartphone Recommendation Vocabulary"@en ;
    dct:description "SKOS vocabulary for smartphone features, use cases, and price segments"@en ;
    skos:hasTopConcept spv:Feature, spv:UseCase, spv:PriceSegment .
# endregion

# region FEATURES
spv:Feature a skos:Concept ;
    skos:prefLabel "Feature"@en ;
    skos:topConceptOf spv:SmartphoneVocabulary ;
    skos:definition "A technical feature or specification"@en .

spv:Camera a skos:Concept ;
    skos:prefLabel "Camera"@en ;
    skos:broader spv:Feature ;
    skos:inScheme spv:SmartphoneVocabulary ;
    skos:definition "Photo and video capture quality"@en .

spv:Display a skos:Concept ;
    skos:prefLabel "Display"@en ;
    skos:altLabel "Screen"@en ;
    skos:broader spv:Feature ;
    skos:inScheme spv:SmartphoneVocabulary ;
    skos:definition "Screen quality, resolution, refresh rate"@en .

spv:Battery a skos:Concept ;
    skos:prefLabel "Battery"@en ;
    skos:broader spv:Feature ;
    skos:inScheme spv:SmartphoneVocabulary ;
    skos:definition "Battery life and charging"@en .

spv:Performance a skos:Concept ;
    skos:prefLabel "Performance"@en ;
    skos:altLabel "Processor"@en ;
    skos:broader spv:Feature ;
    skos:inScheme spv:SmartphoneVocabulary ;
    skos:definition "Processing power, speed, responsiveness"@en .

spv:Storage a skos:Concept ;
    skos:prefLabel "Storage"@en ;
    skos:broader spv:Feature ;
    skos:inScheme spv:SmartphoneVocabulary ;
    skos:definition "Internal storage capacity"@en .

spv:Build a skos:Concept ;
    skos:prefLabel "Build"@en ;
    skos:altLabel "Design"@en ;
    skos:broader spv:Feature ;
    skos:inScheme spv:SmartphoneVocabulary ;
    skos:definition "Build quality, design, durability"@en .

spv:OS a skos:Concept ;
    skos:prefLabel "OS"@en ;
    skos:altLabel "Operating System"@en, "Software"@en ;
    skos:broader spv:Feature ;
    skos:inScheme spv:SmartphoneVocabulary ;
    skos:definition "Operating system, software, UI"@en .

spv:Gaming a skos:Concept ;
    skos:prefLabel "Gaming"@en ;
    skos:broader spv:Feature ;
    skos:inScheme spv:SmartphoneVocabulary ;
    skos:definition "Gaming performance and capabilities"@en .

spv:Value a skos:Concept ;
    skos:prefLabel "Value"@en ;
    skos:altLabel "Price"@en ;
    skos:broader spv:Feature ;
    skos:inScheme spv:SmartphoneVocabulary ;
    skos:definition "Price, value for money"@en .

spv:Overall a skos:Concept ;
    skos:prefLabel "Overall"@en ;
    skos:broader spv:Feature ;
    skos:inScheme spv:SmartphoneVocabulary ;
    skos:definition "General sentiment or overall experience"@en .
# endregion

# region USE CASES
spv:UseCase a skos:Concept ;
    skos:prefLabel "Use Case"@en ;
    skos:topConceptOf spv:SmartphoneVocabulary ;
    skos:definition "User intent or primary usage scenario"@en .

spv:Photography a skos:Concept ;
    skos:prefLabel "Photography"@en ;
    skos:broader spv:UseCase ;
    skos:inScheme spv:SmartphoneVocabulary ;
    skos:definition "Taking photos and videos"@en .

spv:Gaming a skos:Concept ;
    skos:prefLabel "Gaming"@en ;
    skos:broader spv:UseCase ;
    skos:inScheme spv:SmartphoneVocabulary ;
    skos:definition "Playing mobile games"@en .

spv:EverydayUse a skos:Concept ;
    skos:prefLabel "Everyday Use"@en ;
    skos:broader spv:UseCase ;
    skos:inScheme spv:SmartphoneVocabulary ;
    skos:definition "General daily usage"@en .
# endregion

# region PRICE SEGMENTS
spv:PriceSegment a skos:Concept ;
    skos:prefLabel "Price Segment"@en ;
    skos:topConceptOf spv:SmartphoneVocabulary ;
    skos:definition "Market segment based on price range"@en .

spv:Flagship a skos:Concept ;
    skos:prefLabel "Flagship"@en ;
    skos:broader spv:PriceSegment ;
    skos:inScheme spv:SmartphoneVocabulary ;
    skos:definition "Premium segment, higher prices"@en .

spv:MidRange a skos:Concept ;
    skos:prefLabel "Mid-Range"@en ;
    skos:broader spv:PriceSegment ;
    skos:inScheme spv:SmartphoneVocabulary ;
    skos:definition "Middle segment, average prices"@en .

spv:Budget a skos:Concept ;
    skos:prefLabel "Budget"@en ;
    skos:broader spv:PriceSegment ;
    skos:inScheme spv:SmartphoneVocabulary ;
    skos:definition "Entry-level segment, lower prices"@en .
# endregion
